{
    "name": "crane",
    "displayName": "PHP Intellisense - Crane",
    "description": "PHP Intellisense/code-completion",
    "author": {
        "name": "Hvy Industries",
        "url": "https://hvy.io",
        "email": "joe@hvy.io"
    },
    "icon": "images/php-256.png",
    "license": "MIT",
    "version": "1.0.0",
    "publisher": "HvyIndustries",
    "engines": {
        "vscode": "^1.8.0"
    },
    "bugs": {
        "url": "https://github.com/HvyIndustries/crane/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/HvyIndustries/crane.git"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "php",
        "php5",
        "php7",
        "crane",
        "hvy",
        "productivity",
        "code-completion",
        "intellisense"
    ],
    "galleryBanner": {
        "theme": "dark",
        "color": "#232d33"
    },
    "private": true,
    "homepage": "https://hvy.io/crane",
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/main",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Crane Configuration",
            "properties": {
                "crane.cache": {
                    "type": "boolean",
                    "default": true,
                    "description": "%crane.config.cache%"
                },
                "crane.debug": {
                    "type": "boolean",
                    "default": false,
                    "description": "%crane.config.debug%"
                }
            }
        },
        "keybindings": [
            {
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "command": "crane.rebuildSources",
                "when": "editorTextFocus && editorLangId == 'php'"
            }
        ],
        "commands": [
            {
                "command": "crane.rebuildSources",
                "title": "%crane.command.rebuildSources%"
            },
            {
                "command": "crane.deleteCaches",
                "title": "%crane.command.deleteCaches%"
            }
        ],
        "snippets": [
            {
                "language": "php",
                "path": "./snippets/php.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^7.0.4",
        "typescript": "^2.1.5",
        "vscode": "^1.0.3"
    },
    "dependencies": {
        "php-parser": "^2.0.0-pre4",
        "php-reflection": "^1.1.0",
        "vscode-languageclient": "^3.0.3",
        "vscode-nls": "^1.0.4"
    }
}
