{
    "name": "crane",
    "displayName": "Crane - PHP Intellisense",
    "description": "PHP Intellisense/code-completion",
    "author": {
        "name": "Hvy Industries",
        "url": "https://hvy.io",
        "email": "joe@hvy.io"
    },
    "icon": "images/icon.png",
    "license": "MIT",
    "version": "0.1.7",
    "publisher": "HvyIndustries",
    "engines": {
        "vscode": "^0.10.x"
    },
    "bugs": {
        "url": "https://github.com/HvyIndustries/crane/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/HvyIndustries/crane.git"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Other"
    ],
    "galleryBanner": {
        "theme": "dark",
        "color": "#232d33"
    },
    "private": true,
    "homepage": "https://hvy.io/crane",
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Crane Configuration",
            "properties": {
                "crane.showStatusBarBugReportLink": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show or hide the status bar item asking you to report any PHP Intellisense bugs"
                },
                "crane.saveCache": {
                    "type": "boolean",
                    "default": true,
                    "description": "Turning on caching will allow Crane to start faster after the initial startup"
                },
                "crane.debugMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable or disable debug mode. WARNING: may cause performance slowdowns on large projects!"
                },
                "crane.phpstubsZipFile": {
                    "type": "string",
                    "default": "https://codeload.github.com/HvyIndustries/crane-php-stubs/zip/master",
                    "description": "The location to the PHP Stubs zip file that can be downloaded and unzipped for 3rd party library autocompletion."
                }
            }
        },
        "keybindings": [
            {
                "key": "ctrl+shift+r",
                "command": "crane.rebuildSources",
                "when": "editorTextFocus && editorLangId == 'php'"
            }
        ],
        "commands": [
            {
                "command": "crane.reportBug",
                "title": "Crane - Report PHP Intellisense Bug"
            },
            {
                "command": "crane.rebuildSources",
                "title": "Crane - Rebuild PHP Source Caches"
            },
            {
                "command": "crane.downloadPHPLibraries",
                "title": "Crane - Download PHP Library Stubs"
            }
        ],
        "snippets": [
            {
                "language": "php",
                "path": "./snippets/php.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^1.6.2",
        "vscode": "^0.11.13"
    },
    "dependencies": {
        "vscode-languageclient": "^1.1.0",
        "php-parser": "glayzzle/php-parser#6131b11"
    }
}
